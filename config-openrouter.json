{
  "host": "127.0.0.1",
  "port": 3456,
  "log": true,
  "log_file": "~/.ccproxy/ccproxy.log",
  "providers": [
    {
      "name": "openrouter",
      "api_base_url": "https://openrouter.ai/api/v1",
      "api_key": "${OPENROUTER_API_KEY}",
      "models": [
        "anthropic/claude-opus-4-20250720",
        "anthropic/claude-sonnet-4-20250720",
        "anthropic/claude-3-5-haiku-20241022",
        "openai/gpt-4.1",
        "openai/gpt-4.1-turbo",
        "openai/gpt-4.1-mini",
        "google/gemini-2.5-pro",
        "google/gemini-2.5-flash",
        "meta-llama/llama-3.3-405b-instruct",
        "qwen/qwen3-coder",
        "deepseek/deepseek-chat"
      ],
      "enabled": true
    }
  ],
  "routes": {
    "default": {
      "provider": "openrouter",
      "model": "anthropic/claude-sonnet-4-20250720"
    },
    "longContext": {
      "provider": "openrouter",
      "model": "anthropic/claude-opus-4-20250720"
    },
    "background": {
      "provider": "openrouter",
      "model": "anthropic/claude-3-5-haiku-20241022"
    },
    "think": {
      "provider": "openrouter",
      "model": "anthropic/claude-opus-4-20250720"
    }
  }
}